
@{
    ViewData["Title"] = "Home-Admin";
    var transacciones = ViewBag.Transacciones as NetBank.Core.Application.ViewModels.Transaction.TransaccionCountViewModel;
    var pagos = ViewBag.Payments as NetBank.Core.Application.ViewModels.Payment.PaymentCountViewModel;
    var clientes = ViewBag.Clients as List<NetBank.Core.Application.ViewModels.User.UserViewModel>;
    var products = ViewBag.Products as List<NetBank.Core.Application.ViewModels.Product.ProductViewModel>;
}

<div class="container my-4">
    <div class="row g-4">

        <div class="col-12 col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-currency-dollar me-2"></i>Transacciones</h4>
                    <i class="bi bi-graph-up fs-4"></i>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h5 class="mb-1 text-muted">Totales</h5>
                            <p class="fs-2 fw-bold mb-0">@transacciones?.TransactionTotals</p>
                        </div>
                        <i class="bi bi-cash-stack fs-1 text-primary"></i>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1 text-muted">Hoy</h5>
                            <p class="fs-2 fw-bold mb-0">@transacciones?.TodayTransaction</p>
                        </div>
                        <i class="bi bi-clock-history fs-1 text-primary"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-check-circle me-2"></i>Pagos</h4>
                    <i class="bi bi-wallet2 fs-4"></i>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h5 class="mb-1 text-muted">Totales</h5>
                            <p class="fs-2 fw-bold mb-0">@pagos?.PaymentTotals</p>
                        </div>
                        <i class="bi bi-coin fs-1 text-success"></i>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1 text-muted">Hoy</h5>
                            <p class="fs-2 fw-bold mb-0">@pagos?.TodayPayments</p>
                        </div>
                        <i class="bi bi-calendar-check fs-1 text-success"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-people me-2"></i>Clientes</h4>
                    <i class="bi bi-person-lines-fill fs-4"></i>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <div>
                            <h5 class="mb-1 text-muted">Activos</h5>
                            <p class="fs-2 fw-bold mb-0">@clientes?.Where(x => x.IsActive).Count()</p>
                        </div>
                        <i class="bi bi-person-check fs-1 text-warning"></i>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1 text-muted">Inactivos</h5>
                            <p class="fs-2 fw-bold mb-0">@clientes?.Where(x => !x.IsActive).Count()</p>
                        </div>
                        <i class="bi bi-person-x fs-1 text-warning"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0"><i class="bi bi-box-seam me-2"></i>Productos Registrados</h4>
                    <i class="bi bi-clipboard-data fs-4"></i>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center justify-content-center h-100">
                        <div class="position-relative">
                            <i class="bi bi-archive fs-1 text-info"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                @products?.Count
                            </span>
                        </div>
                        <div class="mt-3 text-center">
                            <h5 class="text-muted mb-1">Registrados</h5>
                            <div class="progress" style="height: 8px; width: 150px;">
                                <div class="progress-bar bg-info" role="progressbar" style="width: 75%"
                                     aria-valuenow="@products?.Count" aria-valuemin="0" aria-valuemax="100">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


