@{
    ViewData["Title"] = "Adminitracion de usuarios";
}

@using NetBank.Core.Application.Enums
@using NetBank.Core.Application.ViewModels.User;
@model List<UserViewModel>;



<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-10 mx-auto mt-4">
            <h4 class="text-center">Administracion de usuarios</h4>

            @if (ViewBag.HasError)
            {
                <div class="alert alert-danger  fade show" role="alert">
                    <span>@ViewBag.Error</span>
                </div>
            }
            <div class="row my-3">
                <div class="col-12 ">
                    <a asp-action="Register" asp-controller="User" class="btn btn-outline-primary text-dark float-end">Crear usuario</a>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Nombre</th>
                                <td>Apellido</td>
                                <td>Cedula</td>
                                <td>Correo</td>
                                <td>IsActive</td>
                                <td>Rol</td>
                                <td>Action</td>
                            </tr>
                            
                        </thead>
                        <tbody>
                            
                            @if(Model.Count == 0 || Model == null)
                            {
                                <h4>No hay usuarios en el sistema</h4>
                            }
                            else
                            {
                                @foreach(var usuario in Model)
                                {
                                    <tr>
                                        <td>@usuario.Name</td>
                                        <td>@usuario.LastName</td>
                                        <td>@usuario.Identification</td>
                                        <td>@usuario.Email</td>
                                        <td>
                                            <span class="p-1 px-2 text-white @(usuario.IsActive ? "bg-success":"bg-danger")">@(usuario.IsActive ? "Activo":"Inactivo")</span>
                                        </td>
                                        <td>
                                            <span class=" p-1 px-2 @(usuario.Rol == (int)Roles.Admin ? "bg-primary text-white":"bg-warning")">@(usuario.Rol == (int)Roles.Admin ? "Administrador" : "Cliente")</span>
                                        </td>
                                        <td>
                                            <button type="button" class="btn @(usuario.IsActive ? "btn-danger":"btn-success")" data-id="@usuario.Id" data-username="@usuario.UserName" data-bs-toggle="modal" data-bs-target="#confirmModal">
                                                @(usuario.IsActive ? "Inactivar" : "Activar")
                                            </button>
                                            <a class="btn btn-warning" asp-action="Edit" asp-controller="User" asp-route-id="@usuario.Id">Editar</a>

                                            @if(usuario.Rol == (int)Roles.Client)
                                            {
                                                <a class="btn btn-secondary text-white" asp-action="Product" asp-controller="Product" asp-route-id="@usuario.Id">Productos</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Encabezado de la modal -->
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">¿Está seguro?</h5>
                <p data-id></p>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <!-- Cuerpo de la modal (opcional, puedes agregar más información) -->
            <div class="modal-body">
                Confirme si desea proceder con la acción.
            </div>
            <!-- Pie de la modal con botones -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <a id="inactiveLinkUser" class="btn btn-primary" asp-action="Inactivate" asp-controller="Admin" asp-route-id="">Si</a>
            </div>
        </div>
    </div>
</div>

<script>
    var confirmModal = document.getElementById('confirmModal');
    var link =document.getElementById('inactiveLinkUser');

    confirmModal.addEventListener('show.bs.modal', function (event) {
      var button = event.relatedTarget;
      var usuarioId = button.getAttribute('data-id'); 
      var username = button.getAttribute('data-username')


      var modalBody = confirmModal.querySelector('.modal-body');
        modalBody.textContent = `¿Está seguro de actualizar al usuario: ${username}?`;


        link.href='/Admin/Inactivate/' + usuarioId;
    });
</script>

