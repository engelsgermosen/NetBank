@{
    ViewData["Title"] = "Adminitracion de usuarios";
}

@using NetBank.Core.Application.Enums
@using NetBank.Core.Application.ViewModels.User;
@model List<UserViewModel>;

<div class="container mt-4">
    <div class="card shadow-sm">
        <!-- Encabezado de la card -->
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Administración de usuarios</h4>
            <a asp-action="Register" asp-controller="User" class="btn btn-primary">Crear usuario</a>
        </div>

        <!-- Cuerpo de la card -->
        <div class="card-body">
            @if (ViewBag.HasError)
            {
                <div class="alert alert-danger fade show" role="alert">
                    <span>@ViewBag.Error</span>
                </div>
            }

            <!-- Tabla de usuarios -->
            <div class="table-responsive mt-3">
                <table class="table table-bordered table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Cédula</th>
                            <th>Correo</th>
                            <th>Estado</th>
                            <th>Rol</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model == null || Model.Count == 0)
                        {
                            <!-- Fila para mostrar que no hay usuarios -->
                            <tr>
                                <td colspan="7" class="text-center fw-bold">
                                    No hay usuarios en el sistema
                                </td>
                            </tr>
                        }
                        else
                        {
                            @foreach (var usuario in Model)
                            {
                                <tr>
                                    <td>@usuario.Name</td>
                                    <td>@usuario.LastName</td>
                                    <td>@usuario.Identification</td>
                                    <td>@usuario.Email</td>
                                    <td>
                                        <span class="p-1 px-2 text-white @(usuario.IsActive ? "bg-success" : "bg-danger")">
                                            @(usuario.IsActive ? "Activo" : "Inactivo")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="p-1 px-2 @(usuario.Rol == (int)Roles.Admin ? "bg-primary text-white" : "bg-warning")">
                                            @(usuario.Rol == (int)Roles.Admin ? "Administrador" : "Cliente")
                                        </span>
                                    </td>
                                    <td>
                                        <button type="button"
                                                class="btn @(usuario.IsActive ? "btn-danger" : "btn-success")"
                                                data-id="@usuario.Id"
                                                data-username="@usuario.UserName"
                                                data-bs-toggle="modal"
                                                data-bs-target="#confirmModal">
                                            @(usuario.IsActive ? "Inactivar" : "Activar")
                                        </button>

                                        <a class="btn btn-warning"
                                           asp-action="Edit"
                                           asp-controller="User"
                                           asp-route-id="@usuario.Id">
                                            Editar
                                        </a>

                                        @if (usuario.Rol == (int)Roles.Client)
                                        {
                                            <a class="btn btn-secondary text-white"
                                               asp-action="Product"
                                               asp-controller="Product"
                                               asp-route-id="@usuario.Id">
                                                Productos
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal de confirmación -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Encabezado de la modal -->
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">¿Está seguro?</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <!-- Cuerpo de la modal -->
            <div class="modal-body">
                Confirme si desea proceder con la acción.
            </div>
            <!-- Pie de la modal con botones -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
                <a id="inactiveLinkUser" class="btn btn-primary" asp-action="Inactivate" asp-controller="Admin" asp-route-id="">
                    Sí
                </a>
            </div>
        </div>
    </div>
</div>



<script>
    var confirmModal = document.getElementById('confirmModal');
    var link =document.getElementById('inactiveLinkUser');

    confirmModal.addEventListener('show.bs.modal', function (event) {
      var button = event.relatedTarget;
      var usuarioId = button.getAttribute('data-id'); 
      var username = button.getAttribute('data-username')


      var modalBody = confirmModal.querySelector('.modal-body');
        modalBody.textContent = `¿Está seguro de actualizar al usuario: ${username}?`;


        link.href='/Admin/Inactivate/' + usuarioId;
    });
</script>

