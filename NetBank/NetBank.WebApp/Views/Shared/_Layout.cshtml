@using NetBank.Core.Application.Dtos.Account
@using NetBank.Core.Application.ViewModels;
@using NetBank.Core.Application.Helpers;
@using NetBank.Core.Application.Enums;
@inject IHttpContextAccessor http;

@{
    var usuario = http?.HttpContext?.Session.Get<AuthenticationResponse>("user");
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NetBank.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NetBank.WebApp.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex flex-column min-vh-100">
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">

                            @if(usuario != null)
                            {

                                switch(usuario.Rol)
                                {
                                    case (int)Roles.Admin:
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Home</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Main">Administracion de usuarios</a>
                                        </li>
                                        break;
                                    case (int)Roles.Client:
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Home</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Pagos</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Beneficiarios</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Avance de efectivo</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Transferencia</a>
                                        </li>
                                        break;

                                }
                            }

                        </ul>
                        @if(usuario != null)
                        {
                            <a asp-action="LogOut" asp-controller="User" class="btn btn-danger text-light">LogOut</a>
                        }
                    </div>
                </div>
            </nav>
        </header>

        <main class="d-flex flex-grow-1">
            @RenderBody()
        </main>

        <footer class="border-top text-muted p-3">
            <p class="">
                &copy; 2025 - NetBank.WebApp 
            </p>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
