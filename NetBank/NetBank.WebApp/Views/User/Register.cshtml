@{
    var roles = ViewBag.Roles as List<NetBank.Core.Application.ViewModels.Role.RolViewModel>;
}
@using NetBank.Core.Application.ViewModels.User;
@model SaveUserViewModel;


<div class="container-fluid">
    <div class="row">
        <div class="col-12 col-md-6 col-lg-4 mx-auto">
            <div class="card">
                <div class="card-header bg-dark text-light">
                    <h4>Registro de usuarios</h4>
                </div>
                <div class="card-body">

                    @if(Model.HasError)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <p>@Model.Error</p>
                        </div>
                    }

                    <form method="post" asp-controller="User" asp-action="Index">
                        <div class="mb-2">
                             <label class="form-label" asp-for="Name">Nombre:</label>
                            <input class="form-control" asp-for="Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                             <label class="form-label" asp-for="LastName">Apellido:</label>
                            <input class="form-control" asp-for="LastName" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label class="form-label" asp-for="Email">Correo electronico:</label>
                            <input class="form-control" asp-for="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label class="form-label" asp-for="Identification">Cedula:</label>
                            <input class="form-control" asp-for="Identification" />
                            <span asp-validation-for="Identification" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label class="form-label" asp-for="UserName">Usuario:</label>
                            <input class="form-control" asp-for="UserName" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label class="form-label" asp-for="Password">Contraseña:</label>
                            <input class="form-control" asp-for="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label class="form-label" asp-for="ConfirmPassword">Confirmar contraseña:</label>
                            <input class="form-control" asp-for="ConfirmPassword" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-2">
                            <label class="form-label" asp-for="Rol">Rol:</label>
                            <select id="Rol" asp-for="Rol" class="form-select">
                                <option value="0">--Seleccionar--</option>
                                
                                @if( roles != null && roles.Count > 0)
                                {
                                    @foreach(var rol in roles)
                                    {
                                        <option value="@rol.Id">@rol.Name</option>
                                    }
                                }
                            </select>
                        </div>

                        <div id="monto" class="mb-2 d-none">
                            <label class="form-label" asp-for="InitialAmount">Monto inicial:</label>
                            <input step="any" class="form-control" asp-for="InitialAmount" />
                            <span asp-validation-for="InitialAmount" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-outline-primary float-end">Guardar</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script>

    const rol = document.querySelector("#Rol")
    const monto = document.querySelector("#monto")

    rol.addEventListener('input',x => {
        if(x.target.value == @NetBank.Core.Application.Enums.Roles.Client)
        {
            monto.classList.toggle("d-none");
        }
    }
</script>
